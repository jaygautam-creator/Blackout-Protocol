<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section (Keep as is) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_header"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <!-- App Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_mesh"
                    android:tint="#4FC3F7"
                    android:contentDescription="Mesh Network"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BLACKOUT PROTOCOL"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOS"
                    android:textColor="#F44336"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_sos_badge"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>

            <!-- Status Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A2E"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Status Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="NETWORK STATUS"
                            android:textColor="#4FC3F7"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"/>

                        <TextView
                            android:id="@+id/tvConnectedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_count_badge"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"/>
                    </LinearLayout>

                    <!-- Status Message -->
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Initializing mesh network..."
                        android:textColor="#81C784"
                        android:textSize="13sp"
                        android:paddingBottom="16dp"/>

                    <!-- Status Indicators -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Internet Status -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivInternetStatus"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_wifi_off"
                                android:tint="#FF6B6B"
                                android:contentDescription="Internet Status"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Internet"
                                android:textColor="#AAAAAA"
                                android:textSize="11sp"
                                android:paddingTop="4dp"/>
                        </LinearLayout>

                        <!-- Mesh Status -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivMeshStatus"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_mesh"
                                android:tint="#4FC3F7"
                                android:contentDescription="Mesh Status"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mesh"
                                android:textColor="#AAAAAA"
                                android:textSize="11sp"
                                android:paddingTop="4dp"/>
                        </LinearLayout>

                        <!-- Gateway Status -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivGatewayStatus"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_gateway"
                                android:tint="#FFA500"
                                android:contentDescription="Gateway Status"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gateway"
                                android:textColor="#AAAAAA"
                                android:textSize="11sp"
                                android:paddingTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Message Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E1E2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Card Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EMERGENCY MESSAGE"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="16dp"/>

                <!-- Message Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type your emergency message..."
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#252540"
                    app:boxStrokeColor="#4FC3F7"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:hintTextColor="#666666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMessage"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:gravity="top"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="4"
                        android:padding="12dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSend"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="SEND SOS"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_send"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="10dp"
                        app:backgroundTint="#F44336"
                        style="@style/Widget.MaterialComponents.Button"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTestFirebase"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="TEST"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_test"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="10dp"
                        app:backgroundTint="#4CAF50"
                        style="@style/Widget.MaterialComponents.Button"/>
                </LinearLayout>

                <!-- Location Toggle -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Include GPS Location"
                    android:textColor="#AAAAAA"
                    app:trackTint="#4FC3F7"
                    app:thumbTint="#FFFFFF"
                    android:checked="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Message Log Card - SIMPLIFIED -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardBackgroundColor="#1E1E2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Log Header -->
                <LinearLayout
                    android:id="@+id/logHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="#252540">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_log"
                        android:tint="#4FC3F7"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Log"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MESSAGE LOG"
                        android:textColor="#4FC3F7"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvLogCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:background="#333344"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"/>
                </LinearLayout>

                <!-- Log Content - SIMPLIFIED (Remove inner NestedScrollView) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:background="#141420">

                    <ScrollView
                        android:id="@+id/logScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/tvReceived"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#E0E0E0"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:lineSpacingExtra="4dp"
                            android:padding="12dp"
                            android:textIsSelectable="true"/>
                    </ScrollView>
                </LinearLayout>

                <!-- Log Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#252540">

                    <Button
                        android:id="@+id/btnClearLog"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Clear"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        android:background="#333344"
                        android:paddingVertical="8dp"/>

                    <Button
                        android:id="@+id/btnExportLog"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Export"
                        android:textColor="#4FC3F7"
                        android:textSize="12sp"
                        android:background="#333344"
                        android:paddingVertical="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="⚡ Mesh Network Active • Privacy First"
            android:textColor="#81C784"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingVertical="8dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>